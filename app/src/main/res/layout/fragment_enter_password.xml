<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_above="@id/numberPanel"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/passwordTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/gap_normal"
            android:text="@string/enter_your_password"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:gravity="center"/>
        <LinearLayout
            android:id="@+id/passwordPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="@dimen/gap_normal">
            <TextView
                android:id="@+id/passwordBox1"
                android:layout_marginStart="@dimen/gap_normal"
                android:layout_marginEnd="@dimen/gap_normal"
                android:layout_width="@dimen/password_box_size"
                android:layout_height="@dimen/password_box_size"
                android:gravity="center"
                android:background="@drawable/bg_password_column"
                android:textSize="@dimen/password_text_size"/>
            <TextView
                android:id="@+id/passwordBox2"
                android:layout_marginStart="@dimen/gap_normal"
                android:layout_marginEnd="@dimen/gap_normal"
                android:layout_width="@dimen/password_box_size"
                android:layout_height="@dimen/password_box_size"
                android:gravity="center"
                android:background="@drawable/bg_password_column"
                android:textSize="@dimen/password_text_size"/>
            <TextView
                android:id="@+id/passwordBox3"
                android:layout_marginStart="@dimen/gap_normal"
                android:layout_marginEnd="@dimen/gap_normal"
                android:layout_width="@dimen/password_box_size"
                android:layout_height="@dimen/password_box_size"
                android:gravity="center"
                android:background="@drawable/bg_password_column"
                android:textSize="@dimen/password_text_size"/>
            <TextView
                android:id="@+id/passwordBox4"
                android:layout_marginStart="@dimen/gap_normal"
                android:layout_marginEnd="@dimen/gap_normal"
                android:layout_width="@dimen/password_box_size"
                android:layout_height="@dimen/password_box_size"
                android:gravity="center"
                android:background="@drawable/bg_password_column"
                android:textSize="@dimen/password_text_size"/>
        </LinearLayout>
    </LinearLayout>

    <GridLayout
        android:id="@+id/numberPanel"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3">
        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorThree"
            android:padding="@dimen/gap_big"
            app:backgroundTint="@color/colorThree"
            android:layout_margin="@dimen/stroke_normal"
            android:layout_columnWeight="1"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:text="1"/>
        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorThree"
            android:padding="@dimen/gap_big"
            app:backgroundTint="@color/colorThree"
            android:layout_margin="@dimen/stroke_normal"
            android:layout_columnWeight="1"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:text="2"/>
        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorThree"
            android:padding="@dimen/gap_big"
            app:backgroundTint="@color/colorThree"
            android:layout_margin="@dimen/stroke_normal"
            android:layout_columnWeight="1"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:text="3"/>
        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorThree"
            android:padding="@dimen/gap_big"
            app:backgroundTint="@color/colorThree"
            android:layout_margin="@dimen/stroke_normal"
            android:layout_columnWeight="1"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:text="4"/>
        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorThree"
            android:padding="@dimen/gap_big"
            app:backgroundTint="@color/colorThree"
            android:layout_margin="@dimen/stroke_normal"
            android:layout_columnWeight="1"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:text="5"/>
        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorThree"
            android:padding="@dimen/gap_big"
            app:backgroundTint="@color/colorThree"
            android:layout_margin="@dimen/stroke_normal"
            android:layout_columnWeight="1"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:text="6"/>
        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorThree"
            android:padding="@dimen/gap_big"
            app:backgroundTint="@color/colorThree"
            android:layout_margin="@dimen/stroke_normal"
            android:layout_columnWeight="1"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:text="7"/>
        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorThree"
            android:padding="@dimen/gap_big"
            app:backgroundTint="@color/colorThree"
            android:layout_margin="@dimen/stroke_normal"
            android:layout_columnWeight="1"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:text="8"/>
        <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorThree"
            android:padding="@dimen/gap_big"
            app:backgroundTint="@color/colorThree"
            android:layout_margin="@dimen/stroke_normal"
            android:layout_columnWeight="1"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:text="9"/>
        <Button
            android:id="@+id/buttonNone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorThree"
            android:padding="@dimen/gap_big"
            app:backgroundTint="@color/colorThree"
            android:layout_margin="@dimen/stroke_normal"
            android:layout_columnWeight="1"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:text=""/>
        <Button
            android:id="@+id/button0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorThree"
            android:padding="@dimen/gap_big"
            app:backgroundTint="@color/colorThree"
            android:layout_margin="@dimen/stroke_normal"
            android:layout_columnWeight="1"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:text="0"/>
        <Button
            android:id="@+id/buttonDel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorThree"
            android:padding="@dimen/gap_big"
            app:backgroundTint="@color/colorThree"
            android:layout_margin="@dimen/stroke_normal"
            android:layout_columnWeight="1"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:text="@string/del"/>
    </GridLayout>

</RelativeLayout>